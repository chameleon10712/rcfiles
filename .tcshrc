set LS_TYPE=""

if ( `uname` == "FreeBSD" ) then
    set LS_TYPE="BSD"

else if ( `uname` == "Darwin" ) then
    set LS_TYPE="BSD"

else
    set LS_TYPE="GNU"

endif

if ($LS_TYPE == "BSD") then
    alias ls 'ls -CGF'
else
    alias ls 'ls --color=auto'
endif
alias l 'ls -l'
alias la 'l -a'

#Let "ls" has pretty color
# a     black
# b     red
# c     green
# d     brown
# e     blue
# f     magenta
# g     cyan
# h     light grey
# x     default foreground or background

# 1.   directory
# 2.   symbolic link
# 3.   socket
# 4.   pipe
# 5.   executable
# 6.   block special
# 7.   character special
# 8.   executable with setuid bit set
# 9.   executable with setgid bit set
# 10.  directory writable to others, with sticky bit
# 11.  directory writable to others, without sticky
#      bit
#               1 2 3 4 5 6 7 8 9 1011
setenv LSCOLORS GxFxcxDxCxegedabagacad

setenv LS_COLORS "di=01;36:ln=01;35"

alias grep 'grep --color=auto'
alias v 'vim -p'
alias up 'cd ..'

# CYGWIN-only aliases
if (`uname | cut -b 1-6` == "CYGWIN") then
    alias open 'cygstart'
    alias ping "ping \!:1 /t | iconv -s -f CP950 -t UTF-8"
    alias startx startxwin
endif

if (-f .host_aliases.sh) then
    source .host_aliases.sh
endif

# make hour number 2 digits
set padhour

if ($?prompt) then
  if(! $?WINDOW ) then
    set prompt="%{^[[1;36m%}%T%{^[[m%}%{^[[1;33m%}%n%{^[[m%}@%{^[[1;37m%}%m%{^[[1;32m%}[%~]%{^[[m%}> "
  else
    set session_name="`echo $STY | cut -d '.' -f2`"
    set prompt="%{^[[1;36m%}%T%{^[[m%}%{^[[1;33m%}%n%{^[[m%}@%{^[[1;37m%}%m%{^[[1;32m%}[%~]%{^[[m%}%{^[[1;35m%}[$session_name W$WINDOW]%{^[[m%}> "
  endif
  if ($?tcsh) then
    set mail = (/var/mail/$USER)
    bindkey "^W" backward-delete-word
    bindkey -k up history-search-backward
    bindkey -k down history-search-forward
    bindkey "\ej" backward-word
    bindkey "\ek" forward-word

    # for pietty "home" "end"
    bindkey "\e[1~" beginning-of-line
    bindkey "\e[4~" end-of-line
  endif
endif

setenv LANG zh_TW.UTF-8
setenv LC_ALL zh_TW.UTF-8
setenv EDITOR vim
setenv DISPLAY localhost:0

set autoexpand
set autolist
#set color

# auto complete cd and mkdir with directories
complete cd     'p/1/d/'
complete mkdir  'p/1/d/'
complete rm     'p/1/f/'
complete rm     'p/2/d/'
complete gcc    'n/*/f:*.c/'
complete g++    'n/*/f:*.{c,cpp}/'
complete mv     'p/2/f/'
complete cp     'p/2/f/'
complete tar    'p/2/f:*.{tar,tar.gz}/'
